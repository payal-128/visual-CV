<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="sample.Controller">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Form inputs -->
    <TextField fx:id="nameField" promptText="Full Name"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <TextField fx:id="phoneField" promptText="Phone Number"/>
    <TextArea fx:id="summaryField" promptText="Professional Summary" prefHeight="100"/>

    <TextField fx:id="jobTitleField" promptText="Job Title"/>
    <TextField fx:id="companyField" promptText="Company"/>
    <TextField fx:id="yearsField" promptText="Years of Experience"/>

    <TextField fx:id="schoolField" promptText="School/University"/>
    <TextField fx:id="degreeField" promptText="Degree"/>
    <TextField fx:id="gradYearField" promptText="Graduation Year"/>

    <!-- Buttons -->
    <Button text="Generate Resume" onAction="#handleGenerateResume"/>
    <Label fx:id="statusLabel"/>

</VBox>
